{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*.ts"],
  "extends": "@tsconfig/recommended/tsconfig.json"
}
